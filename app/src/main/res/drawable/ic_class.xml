<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Nền bảng -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/>
            <corners android:radius="4dp"/>
            <size android:width="60dp" android:height="40dp"/>
        </shape>
    </item>

    <!-- Giá đỡ -->
    <item android:left="10dp" android:top="35dp">
        <shape android:shape="rectangle">
            <solid android:color="#795548"/>
            <size android:width="40dp" android:height="5dp"/>
        </shape>
    </item>

    <!-- Chân bảng -->
    <item android:left="15dp" android:top="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#795548"/>
            <size android:width="5dp" android:height="15dp"/>
        </shape>
    </item>

    <item android:left="40dp" android:top="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#795548"/>
            <size android:width="5dp" android:height="15dp"/>
        </shape>
    </item>

</layer-list>
